<script>
  $(function() {
    $( "#announcement_date" ).datepicker({ dateFormat: 'dd-mm-yy' });
  });
</script>

<%= form_for @announcement do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :classification %><br />
    <%= f.select :classification, Announcement::ANNOUNCEMENT_TYPES, :prompt => "Select an announcement type." %>
  </p>
  <p><%= f.submit %></p>
<% end %>
